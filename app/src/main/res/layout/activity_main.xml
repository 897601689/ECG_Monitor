<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ecg_monitor.MainActivity">
    <!--1024x768  160PPI 8英寸 -->

    <LinearLayout
        android:id="@+id/fullscreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">
        <!-- 曲线区域 -->
        <LinearLayout
            android:layout_width="654dp"
            android:layout_height="match_parent"
            android:background="@color/colorAccent"
            android:orientation="vertical">

            <util.MySurfaceView
                android:layout_width="654dp"
                android:layout_height="154dp" />

            <util.MySurfaceView
                android:layout_width="654dp"
                android:layout_height="154dp" />

            <util.MySurfaceView
                android:layout_width="654dp"
                android:layout_height="154dp" />

            <util.MySurfaceView
                android:layout_width="654dp"
                android:layout_height="154dp" />

            <util.MySurfaceView
                android:layout_width="654dp"
                android:layout_height="154dp" />
        </LinearLayout>

        <!-- 值区域 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="70dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#00f"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#ff0"/>
            </LinearLayout>
            <!--体温-->
            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="165dp"
                android:layout_marginTop="1dp"
                android:background="#000"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="心电(bmp)"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_ecg_high"
                            style="@style/main_txt_limit"
                            android:text="120"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_ecg_low"
                            style="@style/main_txt_limit"
                            android:text="60"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_ecg"
                        style="@style/main_txt_value"
                        android:ems="1"
                        android:text="心电60"
                        android:textColor="#FFFFFF"
                        android:textSize="50sp" />

                </LinearLayout>


            </LinearLayout>
            <!--体温-->
            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="165dp"
                android:layout_marginTop="1dp"
                android:background="#000"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="血压(mmHg)"
                    android:textColor="#FFFFFF"
                    android:textSize="25sp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_nibp_high"
                            style="@style/main_txt_limit"
                            android:text="38"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_nibp_low"
                            style="@style/main_txt_limit"
                            android:text="36"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_nibp"
                        style="@style/main_txt_value"
                        android:ems="1"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/main_txt_limit"
                            android:text="38"
                            android:textColor="#FFFFFF" />

                        <TextView
                            style="@style/main_txt_limit"
                            android:text="36"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_temp2"
                        style="@style/main_txt_value"
                        android:ems="1"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                </LinearLayout>


            </LinearLayout>
            <!--体温-->
            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="165dp"
                android:layout_marginTop="1dp"
                android:background="#000"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="血氧(%)"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="脉率(bmp)"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_spo2_high"
                            style="@style/main_txt_limit"
                            android:text="38"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_spo2_low"
                            style="@style/main_txt_limit"
                            android:text="36"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_spo2"
                        style="@style/main_txt_value"
                        android:ems="1"
                        android:text="80"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_pulse_high"
                            style="@style/main_txt_limit"
                            android:text="38"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_pulse_low"
                            style="@style/main_txt_limit"
                            android:text="36"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_pulse"
                        style="@style/main_txt_value"
                        android:ems="1"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                </LinearLayout>


            </LinearLayout>
            <!--体温-->
            <LinearLayout
                android:layout_width="370dp"
                android:layout_height="165dp"
                android:layout_marginTop="1dp"
                android:background="#000000"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="呼吸(bmp)"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="57dp"
                        android:text="体温(℃)"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_resp_high"
                            style="@style/main_txt_limit"
                            android:text="38"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_resp_low"
                            style="@style/main_txt_limit"
                            android:text="36"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_resp"
                        style="@style/main_txt_value"
                        android:ems="1"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_temp_high"
                            style="@style/main_txt_limit"
                            android:text="38"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/txt_temp_low"
                            style="@style/main_txt_limit"
                            android:text="36"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_temp"
                        style="@style/main_txt_value"
                        android:ems="1"
                        android:text="--"
                        android:textColor="#FFFFFF"
                        android:textSize="40sp" />

                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="370dp"
                android:layout_height="33dp"
                android:gravity="center"
                android:layout_marginTop="1dp"
                android:text="2017-11-18 15:36:20"
                android:textColor="#fff"
                android:background="#000"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
